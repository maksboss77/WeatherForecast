<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/details_date_time"
                style="@style/DetailsTextStyleMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:00" />

            <TextView
                android:gravity="center"
                android:id="@+id/details_temp"
                style="@style/DetailsTextStyleMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/degree" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_description"
                style="@style/DetailsTextStyleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/example" />

            <ImageView
                android:id="@+id/details_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/example"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_wind" />

            <TextView
                android:id="@+id/details_wind"
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_s" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_pressure" />

            <TextView
                android:id="@+id/details_pressure"
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_pascal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_cloud" />

            <TextView
                android:id="@+id/details_clouds"
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_water" />

            <TextView
                android:id="@+id/details_humidity"
                style="@style/DetailsTextStyleAdditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>